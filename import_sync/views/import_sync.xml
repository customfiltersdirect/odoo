<?xml version = "1.0" encoding="utf-8"?>
<odoo>

    <record id="picking_server_action" model="ir.actions.server">
        <field name="name">Run Scheduled Actions</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            action = env.ref('delivery_goflow.sync_order_in_picking_from_goflow_ir_cron').sudo().method_direct_trigger()
        </field>
    </record>

