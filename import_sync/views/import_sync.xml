<?xml version = "1.0" encoding="utf-8"?>
<odoo>

    <record id="picking_server_action" model="ir.actions.server">
        <field name="name">Run Scheduled Actions</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().api_call_for_sync_orders_in_picking(call_for_index=True)
        </field>
    </record>

    <record id="ready_to_pick" model="ir.actions.server">
        <field name="name">Run Sync Goflow Orders Ready to Pick</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="delivery_goflow.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().api_call_for_sync_orders_ready_to_pick(call_for_index=True)
        </field>
    </record>

    <record id="action_update_sp_invoice_delivery" model="ir.actions.server">
        <field name="name">Run Sync Goflow Orders Update Invoice Delivery</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="delivery_goflow.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().update_so_invoice_delivery()
        </field>
    </record>

    <record id="action_update_so_batch_transfers" model="ir.actions.server">
        <field name="name">Run Sync Goflow Orders Update Batch Transfers</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="delivery_goflow.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().update_so_batch_transfers()
        </field>
    </record>

    <record id="action_update_shipped_so_status" model="ir.actions.server">
        <field name="name">Run Sync Goflow Orders Update SO Shipped Status</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="delivery_goflow.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().update_shipped_so_status()
        </field>
    </record>

    <record id="action_export_product" model="ir.actions.server">
        <field name="name">Run Sync Goflow adjust inventory product</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="delivery_goflow.model_product_product"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().adjust_inventory()
        </field>
    </record>

    <record id="orders_shipped" model="ir.actions.server">
        <field name="name">Run Sync Goflow Orders Shipped</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().api_call_for_sync_orders_shipped(call_for_index=True)
        </field>
    </record>

     <record id="sync_goflow_products" model="ir.actions.server">
        <field name="name">Run Sync Goflow Products</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            env.ref('delivery_goflow.sync_product_from_goflow_ir_cron_new').sudo().method_direct_trigger()
        </field>
    </record>

