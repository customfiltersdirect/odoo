<odoo>
    <data>
         <record id="goflow_order_sync_date_wizard" model="ir.ui.view">
            <field name="name">Goflow Orders Sync</field>
            <field name="model">goflow.order.sync.date</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <label for="use_last_sync_date" string="Use last sync date?"/>
                            <div class="o_row">
                                <field name="use_last_sync_date"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"
                                attrs="{'invisible': [('use_last_sync_date', '=', False)]}" />
                                <field name="last_sync_date"
                                       attrs="{'invisible': [('use_last_sync_date', '=', False)]}"/>
                            </div>
                            <field name="sync_mode" invisible="1"/>
                            <label for="from_date" string="Date Ranges" attrs="{'invisible': [('use_last_sync_date', '=', True)]}"/>
                            <div class="o_row" attrs="{'invisible': [('use_last_sync_date', '=', True)]}">
                                <field name="from_date" widget="daterange" options='{"related_end_date": "to_date"}'/>
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                <field name="to_date" widget="daterange" options='{"related_start_date": "from_date"}'/>
                            </div>
                        </group>
                    </group>

                    <footer>
                        <button name="action_sync_now" class="btn-primary" string="Submit" type="object" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_goflow_sync_orders_date_wiz_ready_to_pick" model="ir.actions.act_window">
            <field name="name">Goflow Import New Orders</field>
            <field name="res_model">goflow.order.sync.date</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_sync_mode': 'ready_to_pick'}</field>
            <field name="target">new</field>
        </record>

        <record id="action_goflow_sync_orders_date_wiz_shipped" model="ir.actions.act_window">
            <field name="name">Goflow Import Shipped Orders</field>
            <field name="res_model">goflow.order.sync.date</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_sync_mode': 'shipped'}</field>
            <field name="target">new</field>
        </record>

        <record id="action_goflow_sync_orders_date_wiz_in_picking" model="ir.actions.act_window">
            <field name="name">Goflow Import Picklist</field>
            <field name="res_model">goflow.order.sync.date</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_sync_mode': 'in_picking'}</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>