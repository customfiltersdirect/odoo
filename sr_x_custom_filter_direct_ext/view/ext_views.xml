<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="put_in_a_pack_transfer_button" model="ir.ui.view">
            <field name="name">transfer.view.buttons</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_piap_transfers"
                        icon="fa-shopping-bag">
                        <field string="Pack" name="transfer_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>