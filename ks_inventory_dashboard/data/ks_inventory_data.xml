                {"item_id":"ks_inventory_dashboard.ks_inventory_item_2", "data": {"x": 6, "y": 6, "w": 6, "h": 4}},
                {"item_id":"ks_inventory_dashboard.ks_inventory_item_3", "data": {"x": 0, "y": 2, "w": 6, "h": 4}},
                {"item_id":"ks_inventory_dashboard.ks_inventory_item_4", "data": {"x": 6, "y": 2, "w": 6, "h": 4}},
                {"item_id":"ks_inventory_dashboard.ks_inventory_item_5", "data": {"x": 0, "y": 10, "w": 4, "h": 5}},
                {"item_id":"ks_inventory_dashboard.ks_inventory_item_6", "data": {"x": 8, "y": 10, "w": 4, "h": 5}},
                {"item_id":"ks_inventory_dashboard.ks_inventory_item_8", "data": {"x": 4, "y": 10, "w": 4, "h": 5}},
                {"item_id":"ks_inventory_dashboard.ks_inventory_item_9", "data": {"x": 0, "y": 15, "w": 8, "h": 5}},
                {"item_id":"ks_inventory_dashboard.ks_inventory_item_10", "data": {"x": 8, "y": 15, "w": 4, "h": 5}},
                {"item_id":"ks_inventory_dashboard.ks_inventory_item_11", "data": {"x": 0, "y": 20, "w": 12, "h": 5}},
